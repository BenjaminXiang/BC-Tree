# ------------------------------------------------------------------------------
#  Makefile
# ------------------------------------------------------------------------------
OBJS=pri_queue.o util.o qalsh.o rqalsh.o main.o 

# CXX=g++-8 -std=c++17
CXX=g++ -std=c++17
OMP=-fopenmp -lpthread
OPT=-w -O3

# ------------------------------------------------------------------------------
#  Compile with C++17 and OpenMP
# ------------------------------------------------------------------------------
all:$(OBJS)
	$(CXX) $(OMP) $(OPT) -o p2h $(OBJS)

%.o: %.cc
	$(CXX) $(OMP) -c $(OPT) -o $@ $<

clean:
	-rm $(OBJS) p2h
